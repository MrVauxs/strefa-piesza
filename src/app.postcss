@font-face {
	font-family: 'drogowskaz';
	src: url('/fonts/drogowskaz.woff2') format('woff2'),
		url('/fonts/drogowskaz.woff') format('woff'),
		url('/fonts/drogowskaz.ttf') format('truetype');
}

html,
body {
	@apply h-full;
}

:root {
	--theme-font-family-base: 'drogowskaz'
	--theme-font-family-heading: 'drogowskaz';
}

.heading-link {
	@apply pr-2 text-2xl no-underline text-error-800-100-token;
}
